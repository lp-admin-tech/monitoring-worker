[Unit]
Description=Site Monitoring Worker - API
After=network.target redis-server.service

[Service]
Type=simple
User=rai_ali1235
Group=rai_ali1235
WorkingDirectory=/opt/site-monitoring-worker
Environment="PATH=/opt/site-monitoring-worker/venv/bin"
ExecStart=/opt/site-monitoring-worker/venv/bin/python -m uvicorn src.main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
